@using HayvanDostu.UI.MVC.Models
@model AccountViewModel

@{
    ViewBag.Title = "PersonalRegister";
}


<div>
    @if(ViewBag.Message != null)
    {
        <span>@ViewBag.Message</span>
    }
</div>
<div class="login-form-area mg-t-30 mg-b-40">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"></div>
            <form id="adminpro-form" class="adminpro-form" method="post" action="/Account/PersonalRegister">
                <div class="col-lg-4">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="logo">
                                    <a href="#">
                                        <img src="img/logo/logo.png" alt="" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Bireysel Kayıt Formu</h1>
                                </div>
                            </div>
                        </div>




                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Ad :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.FirstName, new { type = "text", placeholder = "Adınızı giriniz...", @class = "form-control" })
                                    

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Soyad :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.LastName, new { type = "text", placeholder = "Soyadınızı giriniz...", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Doğum Tarihi :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    <br />
                                    @Html.TextBoxFor(a => a.BirthDate, new { type = "date", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Cinsiyet :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">

                                <div class="login-input-area">
                                    <br />


                                    Kadın @Html.RadioButtonFor(a => a.Gender, "Kadın", true)
                                    Erkek @Html.RadioButtonFor(a => a.Gender, "Erkek", false)



                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Varsa Evcil Hayvan Sayısı :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    <br /> <br />
                                    @Html.TextBoxFor(a => a.PetCount, new { type = "number", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Kullanıcı Adı :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.BirthDate, new { type = "text", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>E-mail :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">

                                    @Html.TextBoxFor(a => a.EMail, new { type = "email", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Şifre :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Password, new { type = "password", @class = "form-control" })

                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Şifre Tekrar :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.rePassword, new { type = "password", @class = "form-control" })

                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Tel :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Phone, new { type = "text", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Adres :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Address, new { type = "text", @class = "form-control" })

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                            </div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">

                                    <button type="submit" class="login-button login-button-lg">Kayıt Ol</button>

                                </div>
                            </div>
                        </div>

                        <div>
                            @Html.ActionLink("Giriş Sayfasına Geri Dön", "Login")

                        </div>
                    </div>
                </div>
            </form>
            <div class="col-lg-4"></div>
        </div>
    </div>
</div>

}

