@using HayvanDostu.UI.MVC.Models

@model AccountViewModel


@{
    Layout = null;
}




<!-- login Start-->
<div class="login" style="width:350px !important;margin:0 auto; margin-top:150px;">
    <div class="login-form-area mg-t-30 mg-b-40">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4"></div>
                <form id="adminpro-form" class="adminpro-form" method="post" action="/Account/Login/">
                    <div class="col-lg-4">
                        <div class="login-bg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="logo">
                                        <a href="#">
                                            <img src="img/logo/logo.png" alt="" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title">
                                        <h1 style="color:brown">Giriş ekranı</h1>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>E-mail</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(a => a.EMail, new { type = "email", @class = "form-control" })
                                        <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>Şifre</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(a => a.Password, new { type = "password", @class = "form-control" })
                                        <i class="fa fa-lock login-user"></i>
                                    </div>

                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-4">
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">

                                        <button type="submit" class="login-button login-button-lg">Giriş Yap</button>
                                        <br />
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="Remember" />Beni Hatirla
                                            </label>
                                        </div>
                                        <br />
                                        <a href="/PersonalProfil/ForgotPassword" class="btn btn-link btn-sm pull-right">Şifremi unuttum!</a>
                                        <br />
                                        @if (ViewBag.Message != null)
                                        {
                                            
                                            <p style="color:red">@ViewBag.Message</p>

                                        }
                                        <br />

                                        @Html.ActionLink("Bireysel Kayıt Sayfasına Git", "PersonalRegister")
                                        @Html.ActionLink("Kurumsal Kayıt Sayfasına Git", "CorporateRegister")
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>

</div>


<!-- login End-->
