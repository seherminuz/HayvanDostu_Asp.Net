@using HayvanDostu.UI.MVC.Models
@model Pet

@{
    ViewBag.Title = "PetProfileCreate";
}


<div class="login-form-area mg-t-30 mg-b-40">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"></div>
            <form id="adminpro-form" class="adminpro-form" method="post" action="/PersonalProfil/PetProfileCreate" enctype="multipart/form-data">
                <div class="col-lg-4">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="logo">
                                    <a href="#">
                                        <img src="img/logo/logo.png" alt="" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Evcil Hayvan Profili Oluştur</h1>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Hayvanın Adı :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Name, new { type = "text", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Cinsiyet :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">

                                <div class="login-input-area">
                                    Kız @Html.RadioButtonFor(a => a.Gender, "Kadın", true)
                                    Erkek @Html.RadioButtonFor(a => a.Gender, "Erkek", false)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Hayvan Cinsi :</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.RadioButtonFor(a => a.PetKind, "Kedi", true) Kedi<br>
                                    @Html.RadioButtonFor(a => a.PetKind, "Köpek", false)Köpek<br />
                                    @Html.RadioButtonFor(a => a.PetKind, "Kuş", false)Kuş<br />
                                    @Html.RadioButtonFor(a => a.PetKind, "Diğer", false)Diğer<br />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Türü:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.PetType, new { type = "text", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Doğum Tarihi:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    <br />
                                    @Html.TextBoxFor(a => a.BirthDate, new { type = "date", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Açıklama:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Story, new { type = "text", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>İletişim Bilgileri:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Contact, new { type = "email", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Fotoğrafı:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="file-upload-inner" data-provides="fileupload">
                                    <span class="btn btn-white">

                                        <input type="file" class="default" name="fileUpload" />

                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="row">

                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-8">
                            <div class="login-button-pro">

                                <button type="submit" class="login-button login-button-lg">Kayıt Ol</button>

                                @*@Html.ActionLink("Profil Sayfama Git", "Profil/" + "PersonalProfil", null, new { @class = "btn btn-success" })*@

                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

