@using HayvanDostu.UI.MVC.Models
@model Personal
@{
    /**/

    ViewBag.Title = "ProfilUpdate";
}


<div class="login-form-area mg-t-30 mg-b-40">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            <form id="adminpro-comment-form" class="adminpro-form" method="post" action="/PersonalProfil/ProfilUpdate/">
                <div class="col-lg-6">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="logo">
                                    <a href="#">
                                        <img src="img/logo/logo.png" alt="" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Profil Düzenleme</h1>
                                </div>
                            </div>
                        </div>
                        @Html.HiddenFor(a => a.ID)
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Adı:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", placeholder = "Name", })

                                    <i class="fa fa-user login-user" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Soyadı:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Surname" })
                                    <i class="fa fa-user login-user" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Email:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.EMail, new { @class = "form-control", placeholder = "email" })
                                    <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Telefon:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Phone, new { @class = "form-control", placeholder = "tel" })
                                    <i class="fa fa-phone login-user" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>Adres:</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.TextBoxFor(a => a.Address, new { @class = "form-control", placeholder = "adres" })
                                    <i class="fa fa-globe login-user" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg btnUpdate" data-prID="@Model.ID">Düzenle</button>
                                    <p>   </p>
                                    @Html.ActionLink("Profil Sayfama Git", "Profil", "PersonalProfil", new { id = Model.ID }, new { @class = "btn btn-success" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
<!-- Comment End-->

