
@using HayvanDostu.UI.MVC.Models

@model AccountViewModel

@{
    Layout = null;
}

<!-- login Start-->
<div class="login" style="width:350px !important;margin:0 auto; margin-top:150px;">
    <div class="login-form-area mg-t-30 mg-b-40">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4"></div>
                <form id="adminpro-form" class="adminpro-form" method="post" action="/PersonalProfil/ForgotPassword/">
                    <div class="col-lg-4">
                        <div class="login-bg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="logo">
                                        <a href="#">
                                            <img src="img/logo/logo.png" alt="" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title">
                                        <h1 style="color:brown">Parolamı unuttum!</h1>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>E-mail</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(a => a.EMail, new { type = "email", @class = "form-control" })
                                        <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>Telefon Numarası</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(a => a.Username, new { type = "text", @class = "form-control" })
                                        <i class="fa fa-lock login-user"></i>
                                    </div>

                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>Yeni Şifre</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(a => a.Password, new { type = "password", @class = "form-control" })
                                        <i class="fa fa-lock login-user"></i>
                                    </div>

                                </div>
                            </div>
                            <br />
                            <div class="row">
                                @*<div class="col-lg-4">
                                    </div>*@
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-11">

                                        <button type="submit" class="btn btn-success">Giriş Yap</button>

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>

</div>


<!-- login End-->
