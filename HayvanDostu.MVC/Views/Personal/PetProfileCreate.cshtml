<body class="">
    <div id="wrapper" class="clearfix">
        <!-- preloader -->

        <div class="main-content">
            <section id="home" class="divider parallax layer-overlay overlay-dark-9" data-bg-img="~/Content/images/bg/bg1.jpg">
                <div class="display-table">
                    <div class="display-table-cell">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-push-3">
                                    <div class="text-center mb-60">
                                        <a href="#" class=""><img alt="" src="~/Content/images/logo-wide.png"></a>
                                    </div>
                                    <div class="bg-lightest border-1px p-30 mb-0">
                                        <h3 class="text-theme-colored mt-0 pt-5"> Evcil Hayvan Profili Oluştur</h3>
                                        <hr>

                                        <form id="job_apply_form" name="job_apply_form" action="/Personal/PetProfileCreate/" method="post" enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label>Hayvanının Adı : <small>*</small></label>
                                                        <input name="Name" type="text" placeholder="Adını Girin..." class="form-control">
                                                    </div>
                                                </div>
                                               
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label>Doğum Tarihi : <small>*</small></label>
                                                        <input name="BirthDate" type="date" class="form-control"  placeholder="Date" onfocus="(this.type='date')"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>Cinsiyet : <small>*</small></label>
                                                        <select name="Gender" class="form-control">
                                                            <option value="true">Kız</option>
                                                            <option value="false">Erkek</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>Hayvan Cinsi : <small>*</small></label>
                                                        <select name="PetKind" class="form-control">
                                                            <option value="Kedi">Kedi</option>
                                                            <option value="Köpek">Köpek</option>
                                                            <option value="Kuş">Kuş</option>
                                                            <option value="Diğer">Diğer</option>

                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            
                                           
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label>Hayvan Türü : <small>*</small></label>
                                                        <input name="PetType" type="text" class="form-control"  />
                                                    </div>
                                                </div>
                                               
                                            </div>
                                           
                                            <div class="form-group">
                                                <label>Hikayesi : <small>*</small></label>
                                                <textarea name="Story" class="form-control" rows="5" placeholder="Adresinizi Girin..."></textarea>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-2">Fotoğraf: </label>

                                                <input class="col-sm-5 file" name="fileUpload" type="file">
                                                <div class=" col-sm-5 upload-preview">

                                                </div>

                                            </div>


                                            <div class="form-group">
                                                <input name="form_botcheck" class="form-control" type="hidden" value="" />
                                                <button type="submit" class="btn btn-block btn-dark btn-theme-colored btn-sm mt-20 pt-10 pb-10" data-loading-text="Please wait...">Kayıt Ol</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <!-- end main-content -->
        <!-- Footer -->
        <footer id="footer" class="footer bg-black-222">
            <div class="container p-20">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p class="mb-0">Copyright &copy;2016 ThemeMascot. All Rights Reserved</p>
                    </div>
                </div>
            </div>
        </footer>
