@using HayvanDostu.Model
@model Personal
@{
    ViewBag.Title = "SendMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">


    <!-- Divider: Contact -->
    <section class="divider">
        <div class="container">
            <div class="row pt-30">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-12">
                            <div class="icon-box left media bg-deep p-30 mb-20">
                                <a class="media-left pull-left" href="#"> <i class="pe-7s-call text-theme-colored"></i></a>
                                <div class="media-body">
                                    <h5 class="mt-0">Telefon</h5>
                                    <p>@Model.Phone</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-12">
                            <div class="icon-box left media bg-deep p-30 mb-20">
                                <a class="media-left pull-left" href="#"> <i class="pe-7s-mail text-theme-colored"></i></a>
                                <div class="media-body">
                                    <h5 class="mt-0">Mail</h5>
                                    <p>@Model.EMail</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-8">
                    <h3 class="line-bottom mt-0 mb-30">Sahiplenmek istediğiniz evcil hayvanla ilgili sahibiyle iletişime geçebilirsiniz </h3>
                    <!-- Contact Form -->
                    <form id="mailSender" name="contact_form" class="" action="/Personal/SendMessage/" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(a => a.ID)
                        <div class="form-group">
                            <label>Mesaj : </label>
                            <textarea name="MessageDetails" class="form-control required" rows="5" placeholder="Mesajınızı Girin."></textarea>
                        </div>
                        <div class="form-group">
                            <input name="form_botcheck" class="form-control" type="hidden" value="" />
                            <button type="submit" class="btn btn-dark btn-theme-colored btn-flat mr-5" data-loading-text="Lütfen Bekleyin...">Gönder</button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </section>


</div>


